
@{
    ViewBag.Title = "Collection";
}


<div ng-controller="collectionController">

    <div class="spinner text-center" ng-show="loading">
        <img src="https://loading.io/spinners/spinner/lg.ajax-spinner-preloader.gif" class="ajax-loader" />
    </div>

    <div class="row">
        <div class="col-md-4">
            <h2>In my Collection</h2>
            <div class="row" ng-repeat="game in model.collection">
                <p ng-if="game.Have"><a target="_self" href="/Game?id={{game.Id}}">{{game.Name}}</a></p>

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <h2>In my Wantlist</h2>
            <div class="row" ng-repeat="game in model.collection">
                <p ng-if="game.Want"><a target="_self" href="/Game?id={{game.Id}}">{{game.Name}}</a></p>

            </div>
        </div>
    </div>

    <div class="section group">

    </div>

    </div>